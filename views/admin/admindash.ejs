<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@3.7.0/dist/full.css" rel="stylesheet" type="text/css" />
</head>
<body class="min-h-screen bg-gray-100 font-sans relative">

  <!-- ðŸŒ DaisyUI Swap Toggle (Mobile Only) -->
  <label for="sidebar-toggle" class="btn btn-circle swap swap-rotate fixed top-4 left-4 z-50 lg:hidden bg-white shadow">
    <input type="checkbox" id="sidebar-toggle" />
    <svg class="swap-off fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512">
      <path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z" />
    </svg>
    <svg class="swap-on fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512">
      <polygon points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49" />
    </svg>
  </label>

  <!-- Sidebar -->
  <div id="sidebar" class="fixed top-0 left-0 w-64 h-full bg-gray-800 text-white px-6 space-y-4 transform -translate-x-full lg:translate-x-0 transition-all duration-300 z-40">
    <h2 class="text-2xl font-bold mt-8 mb-6">Admin Panel</h2>
    <a href="/" class="block px-3 py-2 rounded hover:bg-gray-700">Home</a>
    <a href="/viewUserAdmin" class="block px-3 py-2 rounded hover:bg-gray-700">Users</a>
    <a href="/product" class="block px-3 py-2 rounded hover:bg-gray-700">Products</a>
    <a href="/admin/pendingProducts" class="block px-3 py-2 rounded hover:bg-gray-700">Pending Products</a>
    <a href="#" class="block px-3 py-2 rounded hover:bg-gray-700">Orders</a>
    <a href="#" class="block px-3 py-2 rounded hover:bg-gray-700">Settings</a>
    <a href="/logout" class="inline-block mt-6 bg-red-600 hover:bg-red-700 text-white text-sm px-4 py-2 rounded">Logout</a>
  </div>

  <!-- Main Content -->
  <div id="main-content" class="lg:ml-64 p-6 transition-all duration-300">
    <div class="lg:mt-0 mt-16">
      <h1 class="text-3xl font-bold mb-8 text-gray-800">Welcome, Admin</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        <div onclick="window.location.href='/viewUserAdmin'" class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition cursor-pointer">
          <h3 class="text-lg font-semibold text-gray-700 mb-2">Total Users</h3>
          <p class="text-3xl font-bold text-blue-600"><%= totalUsers %></p>
        </div>
        <div onclick="window.location.href='/admin/pendingProducts'" class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition cursor-pointer">
          <h3 class="text-lg font-semibold text-gray-700 mb-2">Products Request</h3>
          <p class="text-3xl font-bold text-blue-600"><%= pendingProducts %></p>
        </div>
        <div onclick="window.location.href='/product'" class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition cursor-pointer">
          <h3 class="text-lg font-semibold text-gray-700 mb-2">Total Products</h3>
          <p class="text-3xl font-bold text-blue-600"><%= totalProducts %></p>
        </div>
        <div onclick="window.location.href='/admin/orders'" class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition cursor-pointer">
          <h3 class="text-lg font-semibold text-gray-700 mb-2">Total Orders</h3>
          <p class="text-3xl font-bold text-blue-600"><%= totalOrders %></p>
        </div>
      </div>
    </div>
  </div>

  <script>
    const sidebar = document.getElementById('sidebar');
    const toggleCheckbox = document.getElementById('sidebar-toggle');
    const mainContent = document.getElementById('main-content');

    toggleCheckbox.addEventListener('change', function () {
      if (this.checked) {
        sidebar.classList.remove('-translate-x-full');
      } else {
        sidebar.classList.add('-translate-x-full');
      }
    });

    document.addEventListener('click', (e) => {
      if (window.innerWidth < 1024 && !sidebar.contains(e.target) && !toggleCheckbox.parentElement.contains(e.target)) {
        sidebar.classList.add('-translate-x-full');
        toggleCheckbox.checked = false;
      }
    });
  </script>

</body>
</html>
