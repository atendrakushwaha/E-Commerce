<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin - All Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- ðŸ”µ Header -->
  <header class="bg-blue-700 text-white p-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <h1 class="text-lg sm:text-xl font-bold">Admin - Product Management</h1>
      <a href="/logout" class="text-sm hover:underline">Logout</a>
    </div>
  </header>

  <!-- ðŸ“¦ Main Content -->
  <main class="max-w-7xl mx-auto p-4 sm:p-6">
    <!-- ðŸ”™ Back Button -->
    <div class="mb-4">
      <a href="/admin" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Dashboard
      </a>
    </div>

    <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6">All Products</h2>

    <!-- ðŸ“‹ Product Table -->
    <div class="overflow-x-auto rounded-lg shadow bg-white">
      <table class="w-full text-sm sm:text-base">
        <thead class="bg-blue-600 text-white text-xs sm:text-sm">
          <tr>
            <th class="py-2 px-3 sm:px-4 text-left">Image</th>
            <th class="py-2 px-3 sm:px-4 text-left">Name</th>
            <th class="py-2 px-3 sm:px-4 text-left">Price</th>
            <th class="py-2 px-3 sm:px-4 text-left">New Price</th>
            <th class="py-2 px-3 sm:px-4 text-left">Category</th>
            <th class="py-2 px-3 sm:px-4 text-left">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-2 px-3 sm:px-4">
                <img src="/productimage/<%= product.pimage %>" alt="Product Image" class="w-12 h-12 sm:w-16 sm:h-16 object-cover rounded">
              </td>
              <td class="py-2 px-3 sm:px-4 whitespace-nowrap"><%= product.pname %></td>
              <td class="py-2 px-3 sm:px-4 whitespace-nowrap">â‚¹<%= product.pprice %></td>
              <td class="py-2 px-3 sm:px-4 text-green-600 font-semibold whitespace-nowrap">â‚¹<%= product.pnewprice %></td>
              <td class="py-2 px-3 sm:px-4 capitalize whitespace-nowrap"><%= product.pcategory %></td>
              <td class="py-2 px-3 sm:px-4">
                <div class="flex flex-col sm:flex-row gap-2">
                  <a href="/editproduct/<%= product._id %>" class="bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1 rounded text-xs sm:text-sm text-center">Edit</a>
                  <a href="/deleteproduct/<%= product._id %>" onclick="return confirm('Are you sure you want to delete this product?')" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-xs sm:text-sm text-center">Delete</a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
