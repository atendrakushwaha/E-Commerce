<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin - All Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <header class="bg-blue-700 text-white p-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <h1 class="text-xl font-bold">Admin - Product Management</h1>
      <a href="/logout" class="text-sm hover:underline">Logout</a>
    </div>
  </header>

  <main class="max-w-7xl mx-auto p-6">
    <h2 class="text-2xl font-bold mb-6">All Products</h2>

    <div class="overflow-x-auto">
      <table class="w-full bg-white rounded-lg shadow">
        <thead class="bg-blue-600 text-white">
          <tr>
            <th class="py-2 px-4 text-left">Image</th>
            <th class="py-2 px-4 text-left">Name</th>
            <th class="py-2 px-4 text-left">Price</th>
            <th class="py-2 px-4 text-left">New Price</th>
            <th class="py-2 px-4 text-left">Category</th>
            <th class="py-2 px-4 text-left">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr class="border-b">
              <td class="py-3 px-4">
                <img src="/productimage/<%= product.pimage %>" alt="Product Image" class="w-16 h-16 object-cover rounded">
              </td>
              <td class="py-3 px-4"><%= product.pname %></td>
              <td class="py-3 px-4">₹<%= product.pprice %></td>
              <td class="py-3 px-4 text-green-600 font-semibold">₹<%= product.pnewprice %></td>
              <td class="py-3 px-4 capitalize"><%= product.pcategory %></td>
              <td class="py-3 px-4">
                <a href="/editproduct/<%= product._id %>" class="bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1 rounded mr-2">Edit</a>
                
                 <a href="/deleteproduct/<%= product._id %>" onclick="return confirm('Are you sure you want to delete this product?')"class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
