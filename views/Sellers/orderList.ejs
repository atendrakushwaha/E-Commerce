<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Orders | Seller Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- üîù Navbar -->
  <nav class="bg-white shadow p-4 flex justify-between items-center">
    <h1 class="text-xl font-bold text-indigo-600">üßæ My Product Orders</h1>
    <a href="/seller/dashboard" class="text-indigo-500 hover:underline">‚Üê Back to Dashboard</a>
  </nav>

  <!-- üìã Order Table -->
  <div class="max-w-6xl mx-auto mt-10 px-4">
    <% if (orders.length === 0) { %>
      <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded shadow">
        No orders placed on your products yet.
      </div>
    <% } else { %>
      <div class="overflow-x-auto bg-white shadow rounded-lg">
        <table class="w-full text-sm text-left text-gray-700">
          <thead class="text-xs bg-gray-100 text-gray-600 uppercase">
            <tr>
              <th class="px-4 py-3">Product</th>
              <th class="px-4 py-3">Buyer</th>
              <th class="px-4 py-3">Qty</th>
              <th class="px-4 py-3">Amount</th>
              <th class="px-4 py-3">Date</th>
              <th class="px-4 py-3">Status</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <tr class="border-t">
                <td class="px-4 py-3 font-medium"><%= order.productName %></td>
                <td class="px-4 py-3"><%= order.buyerName %></td>
                <td class="px-4 py-3"><%= order.quantity %></td>
                <td class="px-4 py-3">‚Çπ<%= order.amount %></td>
                <td class="px-4 py-3"><%= order.date.toDateString() %></td>
                <td class="px-4 py-3">
                  <% if (order.status === 'pending') { %>
                    <span class="bg-yellow-200 text-yellow-800 px-2 py-1 rounded-full text-xs">Pending</span>
                  <% } else if (order.status === 'shipped') { %>
                    <span class="bg-blue-200 text-blue-800 px-2 py-1 rounded-full text-xs">Shipped</span>
                  <% } else if (order.status === 'delivered') { %>
                    <span class="bg-green-200 text-green-800 px-2 py-1 rounded-full text-xs">Delivered</span>
                  <% } else { %>
                    <span class="bg-red-200 text-red-800 px-2 py-1 rounded-full text-xs">Cancelled</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

</body>
</html>
