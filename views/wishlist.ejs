<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Wishlist</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="max-w-7xl mx-auto p-4">
    <h1 class="text-2xl font-bold mb-6">My Wishlist</h1>

    <% if (products.length === 0) { %>
      <p class="text-gray-600">Your wishlist is empty.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% products.forEach(product => { %>
          <div class="bg-white shadow rounded-lg overflow-hidden relative">
            <img src="/productimage/<%= product.pimage %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h2 class="text-lg font-semibold"><%= product.pname %></h2>
              <p class="text-gray-700">â‚¹<%= product.pnewprice %></p>

              <form action="/removewishlist/<%= product._id %>" method="POST" class="mt-2">
                <button class="text-red-500 hover:text-red-700" title="Remove from Wishlist">
                  <i class="fa fa-trash"></i> Remove
                </button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
