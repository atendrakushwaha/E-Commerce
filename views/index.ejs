<body class="bg-gray-50 text-gray-800 font-sans">

  <!-- ✅ Navbar -->
  <%- include('assets/header') %>

  <!-- 🗂️ Category Mega Menu -->
  <section class="bg-white py-5 shadow relative z-50">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-xl font-semibold mb-4">Top Categories</h2>
      <div class="flex flex-wrap justify-center gap-6">
        <% const categories = ["men", "women", "kids","Footware", "beauty","home","Kitchen" ,"electronics","Sports"]; %>
        <% categories.forEach(cat => { %>
        <div class="relative group text-center shrink-0 w-28 cursor-pointer" onclick="window.location.href='/?pcategory=<%= cat %>'">
        <!-- <div class="relative group text-center shrink-0 w-28 cursor-pointer category-card" data-category="<%= cat %>"> -->

          <img src="/myimages/<%= cat %>.webp" alt="<%= cat %>" class="mx-auto w-16 h-16 mb-1 rounded-full shadow" />
          <p class="text-sm capitalize flex items-center justify-center gap-1">
            <%= cat %> 
            <i class="fas fa-caret-down text-xl group-hover:rotate-180 transition-transform"></i>
          </p>
          <div class="absolute top-full left-0 mt-2 hidden group-hover:flex bg-white shadow-xl p-6 rounded-lg w-max min-w-[300px] text-left z-50 gap-6 text-sm">
            <% if (cat === "men") { %>
              <div>
                <h4 class="font-semibold mb-2">Men's Wear</h4>
                <ul class="space-y-1">
                  <li><a href="#" class="hover:text-pink-600">Shirts</a></li>
                  <li><a href="#" class="hover:text-pink-600">T-Shirts</a></li>
                  <li><a href="#" class="hover:text-pink-600">Jeans</a></li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Footwear</h4>
                <ul class="space-y-1">
                  <li><a href="#" class="hover:text-pink-600">Sneakers</a></li>
                  <li><a href="#" class="hover:text-pink-600">Loafers</a></li>
                  <li><a href="#" class="hover:text-pink-600">Formal Shoes</a></li>
                </ul>
              </div>
            <% } else if (cat === "women") { %>
              <div>
                <h4 class="font-semibold mb-2">Ethnic Wear</h4>
                <ul class="space-y-1">
                  <li><a href="#" class="hover:text-pink-600">Sarees</a></li>
                  <li><a href="#" class="hover:text-pink-600">Salwar Suits</a></li>
                  <li><a href="#" class="hover:text-pink-600">Lehengas</a></li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Western Wear</h4>
                <ul class="space-y-1">
                  <li><a href="#" class="hover:text-pink-600">Tops</a></li>
                  <li><a href="#" class="hover:text-pink-600">Dresses</a></li>
                  <li><a href="#" class="hover:text-pink-600">Skirts</a></li>
                </ul>
              </div>
            <% } else if (cat === "kids") { %>
              <div>
                <h4 class="font-semibold mb-2">Boys</h4>
                <ul class="space-y-1">
                  <li><a href="#" class="hover:text-pink-600">T-Shirts</a></li>
                  <li><a href="#" class="hover:text-pink-600">Shorts</a></li>
                  <li><a href="#" class="hover:text-pink-600">Jeans</a></li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Girls</h4>
