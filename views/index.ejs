                <h4 class="font-semibold mb-2">Skincare</h4>
                <ul class="space-y-1">
                  <li><a href="#" class="hover:text-pink-600">Face Wash</a></li>
                  <li><a href="#" class="hover:text-pink-600">Moisturizers</a></li>
                  <li><a href="#" class="hover:text-pink-600">Sunscreen</a></li>
                </ul>
              </div>
            <% } else if (cat === "electronics") { %>
