  <!-- 💥 Deals with Filter -->
  <section id="viewproduct" class="py-10 bg-gradient-to-br from-pink-50 to-gray-100  viewproduct  ">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-pink-600 mb-6">Super Dhamaka Deals 💥</h2>
      <div class="grid md:grid-cols-5 gap-6">

        <!-- Filter Sidebar -->
        <div class="md:col-span-1 bg-white p-4 rounded shadow">
          <h3 class="text-lg font-semibold mb-4">Filter By</h3>
          <form method="get" class="space-y-4">
           <% if (selectedCategory === 'men') { %>
             <select name="psubcategory" class="w-full border border-gray-300 rounded px-3 py-2">
               <option value="">All Subcategories</option>
               <option value="shirts">Shirts</option>
               <option value="tshirts">T-Shirts</option>
               <option value="jeans">Jeans</option>
               <option value="sneakers">Sneakers</option>
               <option value="loafers">Loafers</option>
               <option value="formalshoes">Formal Shoes</option>
             </select>
            <% } else if (selectedCategory === 'women') { %>
              <select name="psubcategory" class="w-full border border-gray-300 rounded px-3 py-2">
                <option value="">All Subcategories</option>
                <option value="sarees">Sarees</option>
                <option value="salwarsuits">Salwar Suits</option>
                <option value="lehengas">Lehengas</option>
                <option value="tops">Tops</option>
                <option value="dresses">Dresses</option>
                <option value="skirts">Skirts</option>
              </select>
            <% } else if (selectedCategory === 'kids') { %>
              <select name="psubcategory" class="w-full border border-gray-300 rounded px-3 py-2">
                <option value="">All Subcategories</option>
                <option value="tshirts">T-Shirts</option>
                <option value="shorts">Shorts</option>
                <option value="jeans">Jeans</option>
                <option value="frocks">Frocks</option>
                <option value="leggings">Leggings</option>
                <option value="skirts">Skirts</option>
              </select>
            <% } else if (selectedCategory === 'beauty') { %>
              <select name="psubcategory" class="w-full border border-gray-300 rounded px-3 py-2">
                <option value="">All Subcategories</option>
                <option value="lipstick">Lipstick</option>
                <option value="foundation">Foundation</option>
                <option value="blush">Blush</option>
                <option value="facewash">Face Wash</option>
                <option value="moisturizers">Moisturizers</option>
                <option value="sunscreen">Sunscreen</option>
              </select>
            <% } else if (selectedCategory === 'electronics') { %>
              <select name="psubcategory" class="w-full border border-gray-300 rounded px-3 py-2">
                <option value="">All Subcategories</option>
                <option value="smartphones">Smartphones</option>
                <option value="featurephones">Feature Phones</option>
                <option value="chargers">Chargers</option>
                <option value="powerbanks">Power Banks</option>
                <option value="cables">Cables</option>
              </select>
            <% } %>
            <select name="pnewprice" class="w-full border border-gray-300 rounded px-3 py-2">
              <option value="">--Select Price--</option>
              <option value="200">Under ₹200</option>
              <option value="500">Under ₹500</option>
            </select>
            <button type="submit" class="w-full bg-pink-600 text-white rounded px-4 py-2 hover:bg-pink-700">Apply</button>
          </form>
        </div>

        <!-- Product Cards -->
        <div class="md:col-span-4 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% products.forEach(product => { %>
          <div class="bg-white shadow rounded-lg overflow-hidden hover:shadow-lg transition cursor-pointer relative" onclick="window.location.href='/viewproduct/<%= product._id %>'">
            <img src="/productimage/<%= product.pimage %>" class="w-full h-60 object-cover">
            <div class="p-4">
              <h3 class="text-lg font-semibold mb-1 truncate"><%= product.pname %></h3>
              <div class="flex items-center gap-3 text-sm">
                <span class="line-through text-gray-500">₹<%= product.pprice %></span>
                <span class="text-pink-600 font-bold">₹<%= product.pnewprice %></span>
              </div>
            </div>

            <!-- ❤️ Like/Wishlist Icon -->
            
         <% 
            const isWishlisted = wishlist.some(w => w.productId.toString() === product._id.toString()); 
          %>

         <form action="/<%= isWishlisted ? 'removewishlist' : 'addwishlist' %>/<%= product._id %>" method="POST" class="absolute top-4 right-4 z-10">
          <button title="<%= isWishlisted ? 'Remove from wishlist' : 'Add to wishlist' %>">
             <% if (isWishlisted) { %>
             <i class="fa fa-heart text-xl text-red-500"></i> <!-- In wishlist -->
             <% } else { %>
             <i class="far fa-heart text-xl text-gray-400 hover:text-pink-500"></i> <!-- Not in wishlist -->
             <% } %>
          </button>
         </form>

          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <div class="flex justify-center mt-10">
  <% if (totalPages > 1) { %>
    <nav class="inline-flex items-center space-x-1 bg-white shadow-md px-4 py-2 rounded-lg text-sm font-medium">
      
      <!-- Prev Button -->
      <% if (currentPage > 1) { %>
        <!-- <a href="/?page=<%= currentPage - 1 %>" class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-100">← Prev</a> -->
         <a href="/?page=<%= currentPage - 1 %>&pcategory=<%= pcategory || '' %>&pnewprice=<%= pnewprice || '' %>&psubcategory=<%= psubcategory || '' %>">
  ← Prev
</a>
      <% } else { %>
        <span class="px-3 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">← Prev</span>
      <% } %>

      <!-- Numbered Page Links -->
      <% for (let i = 1; i <= totalPages; i++) { %>
        <% if (i === currentPage) { %>
          <span class="px-3 py-1 rounded bg-pink-600 text-white border border-pink-600"><%= i %></span>
        <% } else { %>
          <!-- <a href="/?page=<%= i %>" class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-100"><%= i %></a> -->
           <a href="/?page=<%= i %>&pcategory=<%= pcategory || '' %>&pnewprice=<%= pnewprice || '' %>&psubcategory=<%= psubcategory || '' %>"
            class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-100">
    <%= i %>
  </a>
        <% } %>
      <% } %>

      <!-- Next Button -->
      <% if (currentPage < totalPages) { %>
        <!-- <a href="/?page=<%= currentPage + 1 %>" class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-100">Next →</a> -->
          <a href="/?page=<%= currentPage + 1 %>&pcategory=<%= pcategory || '' %>&pnewprice=<%= pnewprice || '' %>&psubcategory=<%= psubcategory || '' %>"
          class="px-3 py-1 rounded border border-gray-300 hover:bg-gray-100">Next →</a>
      <% } else { %>
        <span class="px-3 py-1 rounded border border-gray-200 text-gray-400 cursor-not-allowed">Next →</span>
         
      <% } %>

    </nav>
  <% } %>
</div>
  </section>



